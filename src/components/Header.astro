---
export interface Props {
  active: number;
}

const {
  active
} = Astro.props;
---

<header class="bg-white border border-b-gray-100 shadow-sm">
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <button
          type="button"
          class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="block h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
          </svg>
          <svg
            class="hidden h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div
        class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start"
      >
        <div class="relative w-8 flex flex-shrink-0 items-center">
          <img
            class="absolute block h-8 w-8 rounded-full"
            src="./avatar.jpg"
            alt="ALVA-YKY"
          />
        </div>
        <div class="hidden sm:ml-auto sm:block">
          <nav class="flex space-x-12">
            <a
              href="/"
              class:list={["relative hover:font-bold px-4 py-2 text-sm", active === 0 ? 'bg-indigo-300 rounded-full text-white font-bold' : 'text-gray-600']}
            >
              主页
            </a>

            <a
              href="/blog"
              class:list={["relative hover:font-bold px-4 py-2 text-sm", active === 1 ? 'bg-indigo-300 rounded-full text-white font-bold' : 'text-gray-600']}
            >
              笔记
            </a>

            <a
              href="/project"
              class:list={["relative hover:font-bold px-4 py-2 text-sm", active === 2 ? 'bg-indigo-300 rounded-full text-white font-bold' : 'text-gray-600']}
            >
              项目
            </a>

            <a
              href="/about"
              class:list={["relative hover:font-bold px-4 py-2 text-sm", active === 3 ? 'bg-indigo-300 rounded-full text-white font-bold' : 'text-gray-600']}
            >
              关于我
            </a>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="sm:hidden" id="mobile-menu">
    <div class="space-y-1 px-2 pb-3 pt-2">
      <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
      <a
        href="#"
        class="bg-gray-900 text-white block rounded-md px-3 py-2 text-base font-medium"
        aria-current="page">Dashboard</a
      >

      <a
        href="#"
        class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium"
        >Team</a
      >

      <a
        href="#"
        class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium"
        >Projects</a
      >

      <a
        href="#"
        class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium"
        >Calendar</a
      >
    </div>
  </div>
</header>

<style></style>
